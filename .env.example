# .env.example - Environment variables template for Bug Whisperer
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# GitHub Integration (required for hooks)
# Create a personal access token at: https://github.com/settings/tokens
# Required scopes: repo (for private repos) or public_repo (for public repos only)
# For commitFix hook, token needs write permissions to create branches and PRs
GITHUB_TOKEN=your_token_here

# Optional: Database Configuration (for future features)
# DATABASE_URL=postgresql://username:password@localhost:5432/bugwhisperer

# Optional: Logging Configuration
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100